{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["DOM", "ESNext"],
      "allowJs": true,
      "jsx": "react-jsx",
      "outDir": "./build",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  