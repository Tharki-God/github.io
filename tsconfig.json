{
    "compilerOptions": {
      "target": "ES2017",
      "module": "ES2022",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "lib": ["ESNext",
      "DOM",
      "DOM.Iterable"],
      "allowJs": true,
      "jsx": "react-jsx",
      "outDir": "./build",
      "strict": false,
      "noEmit": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "checkJs": true,
      
    },
    "include": ["src",  "src/custom.d.ts"],
    "exclude": ["node_modules"]
  }
  